---
// src/components/services/ConfeccionesEmpresarialesCard.astro
import ServiceCard from '../ServiceCard.astro';
import ConfeccionDeMaquilaDetail from '../service-details/ConfeccionDeMaquilaDetail.astro';
---

<ServiceCard>
    <Fragment slot="icon">
        <svg width="100" height="100" viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg">
            <rect x="10" y="40" width="80" height="30" stroke="black" stroke-width="4"/>
            <circle cx="20" cy="75" r="5" stroke="black" stroke-width="4"/>
            <circle cx="80" cy="75" r="5" stroke="black" stroke-width="4"/>
            <path d="M30 40 V20 H70 V40" stroke="black" stroke-width="4"/>
          </svg>
          
          
    </Fragment>
    <Fragment slot="title">Confección De Maquila</Fragment>
    <Fragment slot="description">Experiencia, profesionalismo y logística para producir tus diseños con altos estándares de calidad.</Fragment>
    <Fragment slot="detail"><ConfeccionDeMaquilaDetail /></Fragment>
    <Fragment slot="image">
        <img src="https://bogota.gov.co/sites/default/files/2020-07/maquina-plana.jpg" alt="Imagen Confeccion de Maquila" class="w-full h-auto mb-4 rounded-lg" />
    </Fragment>
</ServiceCard>
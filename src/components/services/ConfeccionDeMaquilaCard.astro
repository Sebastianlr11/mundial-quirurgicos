---
// src/components/services/ConfeccionesEmpresarialesCard.astro
import ServiceCard from '../ServiceCard.astro';
import ConfeccionDeMaquilaDetail from '../service-details/ConfeccionDeMaquilaDetail.astro';
---

<ServiceCard class="bg-blue-500 text-white rounded-lg shadow-md"> <Fragment slot="icon" class="bg-white p-2 rounded-full flex items-center justify-center">
        <svg width="60" height="60" viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg">
            <rect x="10" y="40" width="80" height="30" stroke="black" stroke-width="4"/>
            <circle cx="20" cy="75" r="5" stroke="black" stroke-width="4"/>
            <circle cx="80" cy="75" r="5" stroke="black" stroke-width="4"/>
            <path d="M30 40 V20 H70 V40" stroke="black" stroke-width="4"/>
          </svg>
    </Fragment>
    <Fragment slot="title" class="text-white">Confección De Maquila</Fragment> <Fragment slot="description" class="text-gray-100">Experiencia, profesionalismo y logística para producir tus diseños con altos estándares de calidad.</Fragment>  <Fragment slot="detail"><ConfeccionDeMaquilaDetail /></Fragment>
    <Fragment slot="image">
        <img src="https://bogota.gov.co/sites/default/files/2020-07/maquina-plana.jpg" alt="Imagen Confeccion de Maquila" class="w-full h-auto mb-4 rounded-lg" />
    </Fragment>
    <Fragment slot="button">
        <a href="#" class="inline-block bg-white text-blue-500 font-bold py-2 px-6 rounded-md hover:bg-blue-100 transition-colors duration-300">
            Conocer más >
        </a>
    </Fragment>
</ServiceCard>
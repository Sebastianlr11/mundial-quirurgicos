---
// src/components/services/ConfeccionesEmpresarialesCard.astro
import ServiceCard from '../ServiceCard.astro';
import ServicioDeCorteDetail from '../service-details/ServicioDeCorteDetail.astro';
---

<ServiceCard>
    <Fragment slot="icon">
        <svg width="100" height="100" viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg">
            <circle cx="30" cy="30" r="10" stroke="black" stroke-width="4"/>
            <circle cx="70" cy="30" r="10" stroke="black" stroke-width="4"/>
            <path d="M30 40 L70 80 M70 40 L30 80" stroke="black" stroke-width="4"/>
          </svg>
          
    </Fragment>
    <Fragment slot="title">Servicio De Corte</Fragment>
    <Fragment slot="description">Brindamos un servicio especializado de corte de tela quirúrgica, garantizando precisión y eficiencia.</Fragment>
    <Fragment slot="detail"><ServicioDeCorteDetail /></Fragment>
    <Fragment slot="image">
        <img src="https://www.mesasdecorte.com.co/wp-content/uploads/2018/11/EX-23_2.jpg" alt="Imagen Servicio de Corte" class="w-full h-auto mb-4 rounded-lg" />
    </Fragment>
</ServiceCard>
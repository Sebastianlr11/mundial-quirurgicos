---
// src/components/services/ConfeccionesEmpresarialesCard.astro
import ServiceCard from '../ServiceCard.astro';
import ConfeccionesEmpresarialesDetail from '../service-details/ConfeccionesEmpresarialesDetail.astro';
---

<ServiceCard>
    <Fragment slot="icon">
        <svg width="100" height="100" viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M30 10 L50 30 L70 10 L90 30 L85 90 H15 L10 30 Z" stroke="black" stroke-width="4" fill="none"/>
            <path d="M40 50 H60 M40 60 H60" stroke="black" stroke-width="4"/>
          </svg>
          
    </Fragment>
    <Fragment slot="title">Confecciones Empresariales</Fragment>
    <Fragment slot="description">Ofrecemos confecciones empresariales a medida, uniformes y prendas personalizadas.</Fragment>
    <Fragment slot="detail"><ConfeccionesEmpresarialesDetail /></Fragment>
    <Fragment slot="image">
        <img src="https://escuelaescotex.com/wp-content/uploads/2023/06/Imagen-aquien-va-dirigido-patronaje.png" alt="Imagen Estetica y Belleza" class="w-full h-auto mb-4 rounded-lg" />
    </Fragment>
</ServiceCard>
---
// src/components/services/ConfeccionesEmpresarialesCard.astro
import ServiceCard from '../ServiceCard.astro';
import ConfeccionesEmpresarialesDetail from '../service-details/ConfeccionesEmpresarialesDetail.astro';
---

<ServiceCard>
    <Fragment slot="icon">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6" style="vertical-align: -webkit-baseline-middle;">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 21v-8.25M15.75 21v-8.25M8.25 21v-8.25M3 9l9-6 9 6m-1.5 12V10.332A48.36 48.36 0 0 0 12 9.75c-2.551 0-5.056.2-7.5.582V21M3 21h18M12 6.75h.008v.008H12V6.75Z" />
        </svg>
    </Fragment>
    <Fragment slot="title">Confecciones Empresariales</Fragment>
    <Fragment slot="description">Ofrecemos confecciones empresariales a medida, uniformes y prendas personalizadas.</Fragment>
    <Fragment slot="detail"><ConfeccionesEmpresarialesDetail /></Fragment>
    <Fragment slot="video">
        <iframe 
                class="w-full h-64 rounded-lg"
                src="https://youtu.be/iTOC81zG92g"
                title="Video de YouTube"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen>
            </iframe>
    </Fragment>
</ServiceCard>
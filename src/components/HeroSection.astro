---
// src/components/HeroSection.astro
---

<section class="py-24 bg-gradient-to-r from-blue-600 via-blue-500 to-violet-700 relative overflow-hidden rounded-3xl shadow-2xl">
  <div class="container mx-auto px-6 flex flex-col-reverse md:flex-row items-center justify-between">
    <div class="md:w-1/2 text-center md:text-left mb-10 md:mb-0">
      <h1 class="text-5xl md:text-6xl font-extrabold text-white mb-4 leading-snug drop-shadow-2xl">
        Innovación y Calidad en Vestuario Médico
      </h1>
      <p class="text-white text-base md:text-lg mb-6 leading-relaxed">
        Nos especializamos en la fabricación y distribución de ropa médica con tecnología avanzada
        para garantizar seguridad, comodidad y estilo en el sector hospitalario.
      </p>
      <div class="flex justify-center md:justify-start space-x-5">
        <a href="#" class="inline-block bg-white text-blue-700 font-semibold py-3 px-8 rounded-full transition-all duration-300 shadow-md hover:shadow-lg hover:bg-blue-100">
          Explorar Productos
        </a>
        <a href="#" class="inline-block bg-blue-900 text-white font-semibold py-3 px-8 rounded-full transition-all duration-300 shadow-md hover:shadow-lg hover:bg-white hover:text-blue-900 border border-white">
          Contáctanos
        </a>
      </div>
    </div>

    <div id="image-container" class="md:w-1/2 relative cursor-pointer transition-transform duration-500 ease-out">
      <div class="absolute inset-0 bg-blue-800 opacity-20 rounded-full blur-3xl"></div>
      <img src="/images/hero-image.jpg" alt="Vestuario Médico Innovador" 
           class="rounded-3xl shadow-xl transform transition-all duration-500 ease-out hover:scale-105" id="moving-image" />
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const image = document.getElementById('moving-image');
      const container = document.getElementById('image-container');
      if (!image || !container) return;
      const sensitivity = 4.5;
      const handleMouseMove = (e: MouseEvent) => {

        const { left, top, width, height } = container.getBoundingClientRect();
        const mouseX = e.clientX - left;
        const mouseY = e.clientY - top;
        const relX = (mouseX / width - 0.5) * sensitivity;
        const relY = (mouseY / height - 0.5) * sensitivity;
        image.style.transform = `translate(${relX * -1}%, ${relY * -1}%) rotateX(${relY * -5}deg) rotateY(${relX * 5}deg)`;
      };
      container.addEventListener('mousemove', handleMouseMove);
      container.addEventListener('mouseleave', () => {
        image.style.transform = 'translate(0, 0) rotateX(0) rotateY(0)';
      });
    });
  </script>
</section>

<section id="servicios" 
         class="py-16 bg-transparent rounded-2xl my-8"
         aria-labelledby="titulo-servicios">
    <div class="container mx-auto px-4 xl:px-0">
        <div class="text-center mb-12 lg:mb-16">
            <h2 id="titulo-servicios" 
                class="text-4xl font-bold text-gray-900 mb-4 relative pb-6
                       after:content-[''] after:absolute after:bottom-0 after:left-1/2 
                       after:-translate-x-1/2 after:w-16 after:h-1 after:bg-gray-500/30">
                Nuestros Servicios
            </h2>
            <p class="text-lg text-gray-700 max-w-2xl mx-auto">
                Soluciones integrales en vestuario médico y equipamiento hospitalario
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 m-7">
            <slot /> <!-- Opcional: Mantener slot para contenido dinámico -->
        </div>
    </div>
</section>

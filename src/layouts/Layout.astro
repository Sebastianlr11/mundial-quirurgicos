---
// src/layouts/Layout.astro
import '../styles/global.css';
---

<html lang="es">
<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Fabricantes de prendas hospitalarias y equipo médico de alta calidad en Colombia. Batas quirúrgicas, uniformes médicos y ropa de paciente." />
    <meta name="keywords" content="prendas hospitalarias, batas quirúrgicas, uniformes médicos, ropa paciente, equipo médico colombia" />
    <meta property="og:title" content="Mundial Quirurgicos - Especialistas en Prendas Médicas" />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="/images/og-image.jpg" />
    <meta name="generator" content={Astro.generator} />
    <title>Mundial Quirurgicos - Prendas Hospitalarias de Calidad</title>
    <script defer src="/scripts/mobile-menu.js"></script>
</head>

<body class="bg-gray-100 font-sans flex flex-col min-h-screen">
</head>

<body class="bg-gray-100 font-sans flex flex-col min-h-screen">
    <header class="bg-gradient-to-br from-blue-600 to-blue-800 shadow-lg sticky top-0 z-50">
        <div class="container mx-auto px-4">
            <nav class="py-3" aria-label="Navegación principal">
                <div class="flex flex-wrap justify-between items-center">
                    <!-- Logo mejorado -->
                    <a href="/" class="flex items-center space-x-3 group">
                        <img src="/public/images/logoMundial.jpg"
                             alt="Logo Mundial Quirurgicos"
                             class="h-16 w-auto transition-transform duration-300 hover:scale-105"
                             loading="eager"
                             width="150"
                             height="60">
                        <span class="hidden md:block text-white font-bold text-xl tracking-wide transition-colors duration-300 group-hover:text-blue-200">
                            Mundial Quirúrgicos
                        </span>
                    </a>

                    <!-- Menú móvil mejorado -->
                    <button class="md:hidden p-3 text-white hover:bg-blue-700/30 rounded-lg transition-colors duration-300"
                            aria-label="Menú móvil"
                            aria-expanded="false"
                            data-menu-toggle>
                        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
                        </svg>
                    </button>

                    <!-- Menú desktop mejorado -->
                    <div class="hidden w-full md:flex md:w-auto md:items-center" id="main-menu">
                        <ul class="flex flex-col md:flex-row md:space-x-6 mt-4 md:mt-0 text-base font-medium">
                            <li>
                                <a href="/" 
                                   class="block py-2 px-4 text-white hover:bg-blue-700/30 rounded-lg transition-all duration-300 relative
                                          before:absolute before:bottom-0 before:left-1/2 before:w-0 before:h-0.5 before:bg-white before:transition-all before:duration-300
                                          hover:before:w-4/5 hover:before:left-[10%]"
                                   aria-current="page">
                                    Inicio
                                </a>
                            </li>
                            <li>
                                <a href="/productos" 
                                   class="block py-2 px-4 text-white hover:bg-blue-700/30 rounded-lg transition-all duration-300 relative
                                          before:absolute before:bottom-0 before:left-1/2 before:w-0 before:h-0.5 before:bg-white before:transition-all before:duration-300
                                          hover:before:w-4/5 hover:before:left-[10%]">
                                    Productos
                                </a>
                            </li>
                            <li>
                                <a href="/servicios" 
                                   class="block py-2 px-4 text-white hover:bg-blue-700/30 rounded-lg transition-all duration-300 relative
                                          before:absolute before:bottom-0 before:left-1/2 before:w-0 before:h-0.5 before:bg-white before:transition-all before:duration-300
                                          hover:before:w-4/5 hover:before:left-[10%]">
                                    Servicios
                                </a>
                            </li>
                            <li>
                                <a href="/nosotros" 
                                   class="block py-2 px-4 text-white hover:bg-blue-700/30 rounded-lg transition-all duration-300 relative
                                          before:absolute before:bottom-0 before:left-1/2 before:w-0 before:h-0.5 before:bg-white before:transition-all before:duration-300
                                          hover:before:w-4/5 hover:before:left-[10%]">
                                    Nosotros
                                </a>
                            </li>
                            <li>
                                <a href="/contacto" 
                                   class="block py-2 px-6 ml-2 text-white bg-blue-700 hover:bg-blue-600 rounded-full transition-all duration-300
                                          shadow-md hover:shadow-lg hover:scale-105">
                                    Contacto
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </header>

    <main class="flex-grow container mx-auto px-4 py-8">
        <div class="body-overlay"></div>
        <slot />
    </main>

    <footer class="bg-gray-800 text-white mt-12">
        <div class="container mx-auto px-4 py-8">
            <div class="grid md:grid-cols-3 gap-8">
                <!-- Información de la empresa -->
                <div class="mb-6 md:mb-0">
                    <h2 class="text-xl font-bold mb-4">Mundial Quirurgicos</h2>
                    <address class="not-italic">
                        <p class="mb-2">Calle Falsa 123, Bogotá</p>
                        <p class="mb-2">Colombia</p>
                        <p class="mb-2">Tel: <a href="tel:+5712345678" class="hover:text-blue-300">+57 1 234 5678</a></p>
                        <p>Email: <a href="mailto:info@mundialquirurgicos.com" 
                                   class="hover:text-blue-300">info@mundialquirurgicos.com</a></p>
                    </address>
                </div>

                <!-- Enlaces rápidos -->
                <div class="mb-6 md:mb-0">
                    <h3 class="text-lg font-semibold mb-4">Enlaces Rápidos</h3>
                    <ul class="space-y-2">
                        <li><a href="/productos" class="hover:text-blue-300">Catálogo de Productos</a></li>
                        <li><a href="/servicios" class="hover:text-blue-300">Nuestros Servicios</a></li>
                        <li><a href="/certificaciones" class="hover:text-blue-300">Certificaciones</a></li>
                        <li><a href="/blog" class="hover:text-blue-300">Blog</a></li>
                    </ul>
                </div>

                <!-- Redes sociales -->
                <div>
                    <h3 class="text-lg font-semibold mb-4">Síguenos</h3>
                    <div class="flex space-x-4">
                        <a href="#" class="hover:text-blue-300" aria-label="LinkedIn">
                            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><!-- Icono LinkedIn --></svg>
                        </a>
                        <a href="#" class="hover:text-blue-300" aria-label="Facebook">
                            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><!-- Icono Facebook --></svg>
                        </a>
                        <a href="#" class="hover:text-blue-300" aria-label="Instagram">
                            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><!-- Icono Instagram --></svg>
                        </a>
                    </div>
                </div>
            </div>

            <div class="border-t border-gray-700 mt-8 pt-4 text-center md:text-left">
                <p class="text-gray-400 text-sm">
                    &copy; {new Date().getFullYear()} Mundial Quirurgicos. Todos los derechos reservados.
                </p>
                <p class="text-gray-400 text-sm mt-2">
                    <a href="/privacidad" class="hover:text-blue-300">Política de Privacidad</a> | 
                    <a href="/terminos" class="hover:text-blue-300">Términos de Servicio</a>
                </p>
            </div>
        </div>
    </footer>
</body>
</html>